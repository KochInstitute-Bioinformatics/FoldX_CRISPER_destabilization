params {
    // Input parameters
    mutation_csv = null
    structure_dir = "./structures"
    repaired_structures_dir = null
    outdir = "results"
    
    // FoldX parameters
    foldx_path = "foldx_20251231"
    chain = "A"
    number_of_runs = 5
}

process {
    withName: 'GENERATE_MUTATION_FILES' {
        container = "jupyter/scipy-notebook:latest"
    }
    withName: 'REPAIR_STRUCTURES_CONDITIONAL' {
        container = "bumproo/foldx5"
    }
    withName: 'RUN_BUILDMODEL' {
        container = "bumproo/foldx5"
    }
    withName: 'CALCULATE_DDG' {
        container = "jupyter/scipy-notebook:latest"
    }
}

profiles {
    singularity {
        singularity.enabled = true
        singularity.autoMounts = true
    }
    docker {
        docker.enabled = true
        docker.runOptions = '-u $(id -u):$(id -g)'
    }
}

// Execution reports
timeline {
    enabled = true
    file = "${params.outdir}/pipeline_info/execution_timeline.html"
}
report {
    enabled = true
    file = "${params.outdir}/pipeline_info/execution_report.html"
}
trace {
    enabled = true
    file = "${params.outdir}/pipeline_info/execution_trace.txt"
}
dag {
    enabled = true
    file = "${params.outdir}/pipeline_info/pipeline_dag.svg"
}